{
	"$schema": "https://unpkg.com/knip@5.46.0/schema.json",
	"entry": [
		"site/**/*.mdx",
		"site/src/**/*.astro",
		"src/action/index.ts",
		"src/cli.ts",
		"src/**/*.test.*"
	],
	"ignore": ["dist/index.js"],
	"ignoreDependencies": ["sharp"],
	"ignoreExportsUsedInFile": { "interface": true, "type": true },
	"project": ["site/**/*.mdx", "src/**/*.ts"],
	"typescript": {
		"config": ["tsconfig.json", "site/tsconfig.json"]
	}
}
